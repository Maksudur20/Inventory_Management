@model InventorySystem.Models.StockMovement

@{
    ViewData["Title"] = "Stock Movement Details";
}

<h1>Stock Movement Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Item</dt>
        <dd class="col-sm-10">@(Model.Item?.Name ?? "-")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Type)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Type)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Quantity)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Quantity)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.MovementDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.MovementDate)</dd>

        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@(Model.User?.UserName ?? "-")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Notes)</dt>
        <dd class="col-sm-10">@(Model.Notes ?? "-")</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>